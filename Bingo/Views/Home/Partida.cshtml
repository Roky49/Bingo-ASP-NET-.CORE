
@{
    ViewData["Title"] = "Partida";
    int cont = 1;
}
@section scripts {
    <script src="~/js/site.js"></script>

}



<button type="button" class="btn btn-primary" id="empezar"
        style=" position: absolute;
                        left: 50%;
                        top: 50%;
                        transform: translate(-50%, -50%);
                        font-size: 100px;
                        height:auto;
                        width:auto;
                        ">
    Empezar
</button>

<div id="pantalla" class="row" style="display:none;">

    <div class="col-md-7 col-lg-7 col-sm-12">
        @{
            foreach (int i in Model)
            {

                <button type="button" class="btn btn-primary boton" id="@i">@i</button>

                @if (cont % 10 == 0)
                {

                    <br />
                    cont++;
                }


            }
        }
    </div>

    <div class="col-md-5 col-lg-5 col-sm-12">

        <button id="numerobingo" style=" align-content: center;font-size: 200px; height: 100%; width: 100%; color: red;background-color: #337ab7;">


            &nbsp


        </button>

    </div>

</div>




